@page
@model BookLibrary.Pages.LoanRecords.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.LoanRecord.Book.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanRecord.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.LoanRecord.Date.Value.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanRecord.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanRecord.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanRecord.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanRecord.Customer.Fullname)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="LoanRecord.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
