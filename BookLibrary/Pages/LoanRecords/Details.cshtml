@page
@model BookLibrary.Pages.LoanRecords.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.LoanRecord.Book.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanRecord.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.LoanRecord.Date.Value.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanRecord.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanRecord.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanRecord.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanRecord.Customer.Fullname)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.LoanRecord.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
