@page
@model BookLibrary.Pages.LoanRecords.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Loan Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanRecord.CustomerId" class="control-label">Customer</label>
                <select asp-for="LoanRecord.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoanRecord.BookId" class="control-label">Book</label>
                <select asp-for="LoanRecord.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoanRecord.Date" class="control-label">Date of Loan</label>
                <input asp-for="LoanRecord.Date" class="form-control" />
                <span asp-validation-for="LoanRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
