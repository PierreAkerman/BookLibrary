@page
@model BookLibrary.Pages.LoanRecords.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Loan Records</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanRecord[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanRecord[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanRecord[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LoanRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Fullname)
            </td>
            <td>
                @item.Date.Value.ToString("yyyy-MM-dd")
                @*@Html.DisplayFor(modelItem => item.Date)*@
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
