@page
@model BookLibrary.Pages.LoanRecords.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.LoanRecord.Book.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoanRecord.Id" />
            <div class="form-group">
                <label asp-for="LoanRecord.CustomerId" class="control-label">Customer</label>
                <select asp-for="LoanRecord.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="LoanRecord.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanRecord.BookId" class="control-label">Book</label>
                <select asp-for="LoanRecord.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="LoanRecord.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanRecord.Date" class="control-label"></label>
                <input asp-for="LoanRecord.Date" class="form-control" />
                <span asp-validation-for="LoanRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
